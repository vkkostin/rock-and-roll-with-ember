<div class="rr-sidebar">
  <ul class="rr-list">
    {{#each model.bands as |band|}}
      <li class="rr-list-item">
        {{#link-to "bands.band.songs" band.slug class="rr-band-link"}}
          {{band.name}}
          <span class="rr-pointer">
            {{fa-icon "angle-right"}}
          </span>
        {{/link-to}}
      </li>
    {{/each}}
  </ul>
</div>
<div class="rr-main-panel">
  {{outlet}}
</div>